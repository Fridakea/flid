---
import { Image } from "astro:assets";
import imageForside from "../assets/img/forside-stemning.webp";
---

<section id="Container" class="flex-row-reverse">
  <div
    id="text"
    data-aos="fade-left"
    data-aos-duration="1300"
    data-aos-easing="ease-in-sine"
  >
    <h2>Design</h2>
    <h2>Kunst</h2>
    <h2>Håndværk</h2>
  </div>
  <div>
    <Image src={imageForside} alt="Billede af en håndlavet kop" />
  </div>
</section>

<style>
  #Container {
    border: 30px 0px 30px 30px;
    margin: var(--spacing-large) 0 var(--spacing-large);
  }
  #text {
    line-height: 110px;
    margin: auto;
    margin-left: -25px;
  }
  img {
    width: 100%;
  }
  h2 {
    font-size: 4rem;
    font-weight: 500;
  }
</style>
