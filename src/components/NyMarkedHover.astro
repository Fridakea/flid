<style>
.display{
    display: none;
}

#julemarked{
        background-image: url("../assets/img/flid-posters/julemarked23.webp");
        height: 315px;
}
#sensommermarked{
        background-image: url("../assets/img/flid-posters/sensommermarked21.webp");
        height: 315px;
}
#foraarsmarked{
        background-image: url("../assets/img/flid-posters/foraarsmarked23.webp");
        height: 315px;
    }


@media (min-width: 769px) {
    section{
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 32px;
    }
    .card{
        margin: 20px 0px 60px 0px;
        height: 554px;
        width: 362px;
    }
    h1{
        font-size: 2.3rem;
        color: white;
        padding-left: 5px;
    }
    #julemarked{
        background-color: #C55A6D;
    }
    #sensommermarked{
        background-color: #D68893;
    }
    #foraarsmarked{
        background-color: #E7B7B8;
    }
    .read-more{
        display: none;
    }
    #julemarked:hover{
        background-image: url("../assets/img/flid-posters/julemarked23.webp");
        background-repeat: no-repeat;
  background-size: cover; 
  background-position: center;
  transition:1s;
   & h1{
    display: none;
   }
   & .read-more{
        display:flex;
        font-size: 1.5rem;
        justify-content: flex-end;
        align-items: flex-end;
    }
    }
    #sensommermarked:hover{
        background-image: url("../assets/img/flid-posters/sensommermarked21.webp");
        background-repeat: no-repeat;
        background-size: cover; 
  background-position: center;
  transition:1s;
   & h1{
    display: none;
   }
   & .read-more{
        display:flex;
       color: #351e1a;
       font-size: 1.5rem;
        justify-content: flex-end;
        align-items: flex-end;
    }
    }
    #foraarsmarked:hover{
        background-image: url("../assets/img/flid-posters/foraarsmarked23.webp");
        background-repeat: no-repeat;
        background-size: cover; 
  background-position: center;
  transition:1s;
   & h1{
    display: none;
   }
   & .read-more{
    display:flex;
       font-size: 1.5rem;
        justify-content: flex-end;
        align-items: flex-end;
    }
    }
}
