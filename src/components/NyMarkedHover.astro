---
import { Image } from "astro:assets";
import julemarked from "../assets/img/flid-posters/julemarked23.webp";
import sensommermarked from "../assets/img/flid-posters/sensommermarked21.webp";
import foraarsmarked from "../assets/img/flid-posters/foraarsmarked23.webp";
---

<section>
  <h1 class="mobiltext pc-hide">Julemarked</h1>
  <a href="/type/3">
    <div class="card">
        <div class="overlay-div-jul">
          <h1 class="display">Julemarked</h1>
        </div>
        <div class="end">
        <h1 class="read-more display">Læs mere</h1>
          <Image src={julemarked} alt="julemarked plakat" class="plakat"></Image></div>
    </div>
  </a>
  <h1 class="mobiltext pc-hide">Sensommermarked</h1>
  <a href="/type/2">
    <div class="card">
        <div class="overlay-div-sensommer">
          <h1 class="display">Sensommermarked</h1>
        </div>
<div class="end">
        <h1 class="read-more display">Læs mere</h1>
          <Image src={sensommermarked} alt="sensommermarked plakat" class="plakat"></Image></div>
    </div>
  </a>
  <h1 class="mobiltext pc-hide">Forårsmarked</h1>
  <a href="/type/1">
    <div class="card">
        <div class="overlay-div-foraar"> 
          <h1 class="display">Forårsmarked</h1>
        </div>
        <div class="end">
      <h1 class="read-more display">Læs mere</h1> 
        <Image src={foraarsmarked} alt="foraarsmarked plakat" class="plakat"></Image>
      </div>
    </div></a>
  <div class="markedknap-container"></div>
</section>
<style>
  section{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr
  }
  h1{
    font-size: 2.5rem;
  }
  .card{
    height: 550px;
    width: 400px;
  }
  .read-more{
position: absolute;
color: var(--primary-color-tint);
font-size: 2rem;
  }
  .end{
    display: flex;
justify-content: end;
position: absolute;
z-index: 10;
  }
  .plakat{
    height: 550px;
    width: 400px;
  }
  .overlay-div-jul{
    position: absolute;
    color: aqua;
    background-color: aqua;
    height: 550px;
    width: 400px;
    z-index: 11;
    opacity: 1;
    transition: 0.1s;
  }
  .overlay-div-jul:hover{
    opacity: 0;
    z-index: 11;
  }
  .overlay-div-sensommer{
    position: absolute;
    color: aqua;
    background-color: aqua;
    height: 550px;
    width: 400px;
    z-index: 11;
    opacity: 1;
    transition: 0.1s;
  }
  .overlay-div-sensommer:hover{
    opacity: 0;
    z-index: 11;
  }
  .overlay-div-foraar{
    position: absolute;
    color: aqua;
    background-color: aqua;
    height: 550px;
    width: 400px;
    z-index: 11;
    opacity: 1;
    transition: 0.1s;
  }
  .overlay-div-foraar:hover{
    opacity: 0;
    z-index: 11;
  }
</style>