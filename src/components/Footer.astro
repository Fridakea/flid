<style>

article{
    display: grid;
    grid-template-columns: 2fr 1fr;
    align-items: center;
    justify-content: center;
    margin-left: 10%;
    margin-right: 10%;
}
ul{
    list-style: none;
}
li{
  font-size: 1.2rem;
}
li:hover{
    text-transform:uppercase;
}
.some{
    display: flex;
    flex-direction: row;
    justify-content: center;
}
#insta_icon, #facebook_icon{
    max-width: 60px;
    margin-right: 10px;
} 

#insta_icon:hover .fyld, 
#facebook_icon:hover .fyld{
    fill: #6670ce;
}
h6{
    margin-top: 20px;
    margin-bottom: 0;
}

.some{
margin-top: 15%;
}

@media (max-width: 769px) {
nav{
    display: none;
}
}

@media (min-width: 769px) {
    article{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
}
.footer_columns:nth-child(2){
text-align: center;
}
.footer_columns:nth-child(3){
text-align: right;
}

}

</style>