---
import "../styles/main.css";
import "../styles/style.css";
import "../styles/pc-style.css";
import Logo from "./Logo.astro"
import Burger_Menu from "./Burger_Menu.astro"
import Dark_Button from "./Dark_Button.astro"
---
 
<header>
    <Logo></Logo>

 <section class="head_container">

<Dark_Button></Dark_Button>
    <Burger_Menu></Burger_Menu>
 </section>

 </header>

 <style>
    header{
    display: grid;
    grid-template-columns: 1fr 2fr;
    margin-right: 10px;
}
.head_container{
    grid-column: 3;
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
        gap: 12px;

    }


 </style>