---
import Mainlayout from "../layouts/Mainlayout.astro";
---

<Mainlayout>
  <main>
    <h2>Udstillerne på næste marked</h2>
      <a href="/src/pages/marked/[slug].astro">
        <div class="sensommer_container">
        <img src="/src/assets/img/sensommermarked.webp" alt="sensommermarked">
          <div></div>
          <h5>Sensommermarked</h5>
        </div>
      </a>
    <h2>Udstillerne på forrige marked</h2>
    <article id="market_parent">
        <section class="market_child">
          <a href="/src/pages/kunstner/[slug].astro"></a>
          <img src="/src/assets/img/flid-posters/foraarsmarked23.webp" alt="">
          <div></div>
          <h6>Forårsmarked 2024</h6> 
      </a> 
  </section>
        <section class="market_child">
              <a href="artists_listview">
        <img src="/src/assets/img/flid-posters/julemarked23.webp" alt="">
         <div></div>
          <h6>Julemarked 2024</h6>
             </a>
      </section>
 
        <section class="market_child">
          <a href="artists_listview"></a>
        <img src="/src/assets/img/flid-posters/foraarsmarked22.webp" alt="">
        <div></div>
          <h6>Forårsmarked 2023</h6>
       </a>
      </section> 
     
    </article>  
  </main>
</Mainlayout>


<style>
.sensommer_container div{
  width: 100%;
  height: 40px;
  background-color:bisque;
  transform: translateY(-100%);
  opacity: 80%;
  position: relative;
  z-index: 0;
}


.sensommer_container h5{
  transform: translateY(-250%);
  display: flex;
  flex-direction: column;
  align-items:flex-end;
}

/* Generel styling */
#market_parent {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: auto;
  width: auto;
}

.market_child {
  width: 80%;
  margin-top: 6%;
  cursor: pointer;
  transition: all 0.3s ease;
  background-color: var(  --text-color-tint) ;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}
/* .market_child a, .market_child img{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
} */

h6{
  color: var(  --primary-color);
height: 35px;
padding-top: 5%;
padding-left: 7px;
}

@media (min-width: 769px) {

  #market_parent {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: auto;
  gap: 5%;
  width: auto;
}
}

